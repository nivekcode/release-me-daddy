{
  "name": "release-me-daddy",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "format:write": "npm run format:write-lib && npm run format:write-showcase",
    "format:write-lib": "prettier --write \"projects/release-me-daddy/**/*.{ts,js,json,html,scss}\"",
    "format:write-showcase": "prettier --write \"projects/release-me-daddy-showcase/**/*.{ts,js,json,html,scss}\"",
    "format:check": "npm run format:check-lib && npm run format:check-showcase",
    "format:check-lib": "prettier --check \"projects/release-me-daddy/**/*.{ts,js,json,html,scss}\"",
    "format:check-showcase": "prettier --check \"projects/release-me-daddy-showcase/**/*.{ts,js,json,html,scss}\"",
    "test": "ng test",
    "serve:ssr:release-me-daddy-showcase": "node dist/release-me-daddy-showcase/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/platform-server": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@angular/ssr": "^17.0.3",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.3",
    "@angular/cli": "^17.0.3",
    "@angular/compiler-cli": "^17.0.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.0.0",
    "prettier": "^3.1.0",
    "typescript": "~5.2.2"
  }
}
